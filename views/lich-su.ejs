<!-- views/index.ejs -->

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Lịch sử - Tạo danh sách đơn</title>

        <%- include('./partials/head'); -%>

    </head>

    <body>
        <!-- nav -->
        <%- include('./partials/nav'); -%>

        <!-- history -->
        <div class="container my-5 px-5 mt-3">
            <!--  -->
            <div class="row">
                <h3 class="text-center">Lịch sử các lần tạo</h3>
            </div>

            <div class="row">
                <% history.forEach(entry => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= entry.name %></h5>
                        <p class="card-text">
                            Tên file để tái sử dụng noà:
                            <span class="py-1 px-2 bg-light rounded"><%= entry.filename %></span>
                        </p>
                        <p class="card-text">
                            Ngày tải file lên noà:
                            <span class="py-1 px-2 bg-light rounded"><%= entry.date %></span>
                        </p>
                    </div>
                </div>
                <% }); %>
                <% if (history.length === 0) { %>
                <br />
                <div class="my-3 text-center">
                    <h3>Hổng có ai upload file lên gòi</h3>
                    <p>
                        <a href="/">Mọi người vô đây để upload nhoa nhoa!!</a>
                    </p>
                </div>
                <br />
                <% }; %>
            </div>
        </div>

        <!-- footer -->
        <%- include('./partials/footer'); -%>

        <script src="/js/history.js"></script>
    </body>
</html>
