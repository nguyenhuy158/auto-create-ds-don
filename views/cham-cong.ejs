<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Tạo danh sách đơn</title>

        <%- include('./partials/head'); -%>

        <link rel="stylesheet" href="/css/table.css" />
    </head>

    <body>
        <!-- nav -->
        <%- include('./partials/nav'); -%>
        <!-- Bootstrap Spinner -->
        <div class="box-spinner">
            <div id="spinner" class="spinner-border text-primary mt-3" role="status" style="display: none">
            </div>
        </div>

        <div class="container">
            <div class="row">
                <h1 class="text-center">Chấm công</h1>
            </div>

            <div class="row">
              <div class="col">
                <div class="row">
                  <div class="col">
                    <input class="form-control mb-3 ngay-lam-input" type="text" name="daterange" value="01/01/2018 - 01/15/2018" />
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col">
                    <label>Người làm</label>
                    <select class="form-select nguoi-lam-input" name="">
                      <option value="<%= user._id %>" selected><%= user.username %></option>
                    </select>
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col">
                    <label>Buổi sáng</label>
                    <select class="form-select gio-buoi-sang-input" name="">
                      <option value="0" selected>Không làm</option>
                      <option value="2">Ca 1</option>
                      <option value="2">Ca 2</option>
                      <option value="4">Ca 1 & Ca 2</option>
                    </select>
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col">
                    <label>Buổi chiều</label>
                    <select class="form-select gio-buoi-chieu-input" name="">
                      <option value="0" selected>Không làm</option>
                      <option value="2">Ca 1</option>
                      <option value="2">Ca 2</option>
                      <option value="4">Ca 1 & Ca 2</option>
                    </select>
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col">
                    <label>Thêm giờ</label>
                    <input class="form-control gio-lam-them-input" value="0"/>
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col">
                    <button class="btn btn-sm btn-outline-primary them-du-lieu-btn">Thêm dữ liệu</button>
                  </div>
                </div>
              </div>

              <div class="col">
                <div id="calendar"></div>
              </div>

            </div>

        </div>

        <!-- footer -->
        <%- include('./partials/footer'); -%>

        <script src="/js/cham-cong.js"></script>
    </body>
</html>
