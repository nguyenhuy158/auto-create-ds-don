<!-- views/index.ejs -->

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Tạo danh sách đơn</title>

        <%- include('./partials/head'); -%>

        <link rel="stylesheet" href="/css/table.css" />
        <style>
            html div.dt-button-collection,
            body div.dt-button-collection {
                width: 400px;
            }

            html div.dt-button-collection .dt-button,
            body div.dt-button-collection .dt-button {
                display: inline-block;
                width: 32%;
            }

            html div.dt-button-collection .buttons-colvis,
            body div.dt-button-collection .buttons-colvis {
                display: inline-block;
                width: 49%;
            }

            html div.dt-button-collection h3,
            body div.dt-button-collection h3 {
                margin-top: 5px;
                margin-bottom: 5px;
                font-weight: 100;
                border-bottom: 1px solid rgba(150, 150, 150, 0.5);
                font-size: 1em;
                padding: 0 1em;
            }

            html div.dt-button-collection h3.not-top-heading,
            body div.dt-button-collection h3.not-top-heading {
                margin-top: 10px;
            }

            html .pointer,
            body .pointer {
                cursor: pointer;
            }
        </style>
    </head>

    <body>
        <!-- nav -->
        <%- include('./partials/nav'); -%>
        <!-- Bootstrap Spinner -->
        <div class="box-spinner">
            <div id="spinner" class="spinner-border text-primary mt-3" role="status" style="display: none"></div>
        </div>

        <div class="container">
            <div class="row">
                <h1 class="text-center">Quản lý Internship</h1>
            </div>

            <div class="row">
                <div class="col">
                    <table id="internship-table">
                        <thead>
                            <td>No.</td>
                            <td>Tài khoản</td>
                            <td>Họ và tên</td>
                            <td>Tổng số buổi</td>
                            <td>Cập nhật</td>
                            <td>Thao tác</td>
                        </thead>
                    </table>
                </div>

                <!-- <div class="col-4"></div> -->
            </div>
        </div>

        <!-- footer -->
        <%- include('./partials/footer'); -%>
        <%- include('./partials/account-internship-modal'); -%>

        <%- include('./partials/update-internship-modal'); -%>
        <%- include('./partials/delete-internship-modal'); -%>

        <script src="/js/internship.js"></script>
    </body>
</html>
